<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_screen">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ic_screen"
        app:layout_constraintStart_toStartOf="@+id/ic_screen"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Action bar" />

    <ImageView
        android:id="@+id/ic_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/description"
        android:src="@drawable/im_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFFFF4"
        app:layout_constraintEnd_toEndOf="@+id/ic_screen"
        app:layout_constraintStart_toStartOf="@+id/ic_screen"
        app:layout_constraintTop_toBottomOf="@+id/ic_screen"
        tools:text="@string/description_example" />

</androidx.constraintlayout.widget.ConstraintLayout>